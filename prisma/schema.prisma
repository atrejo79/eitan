generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id          Int      @id @default(autoincrement())
  first_name  String
  last_name   String
  username    String   @unique
  email       String   @unique
  createdAt   DateTime @default(now())
}